<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sonata_oauth2_login.checker.email" class="SilasJoisten\Sonata\Oauth2LoginBundle\Checker\Email">
            <argument>%sonata_oauth2_login.valid_email_domains%</argument>
        </service>

        <service id="sonata_oauth2_login.user.provider" class="SilasJoisten\Sonata\Oauth2LoginBundle\User\UserProvider">
            <argument type="service" id="sonata.user.orm.user_manager" />
            <argument type="service" id="sonata_oauth2_login.checker.email" />
            <argument type="service" id="sonata_oauth2_login.google.authorization" />
            <argument>%sonata_oauth2_login.default_user_roles%</argument>
        </service>

        <service id="sonata_oauth2_login.google.client" class="Google_Client">
        </service>

        <service id="sonata_oauth2_login.twig.render_button_extension"
                 class="SilasJoisten\Sonata\Oauth2LoginBundle\Twig\RenderButtonExtension"
                 public="false">
            <tag name="twig.extension" />
        </service>

        <service id="sonata_oauth2_login.google.authorization" class="SilasJoisten\Sonata\Oauth2LoginBundle\Google\Authorization">
            <argument type="service" id="sonata_oauth2_login.google.client" />
        </service>
    </services>
</container>
